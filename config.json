{
    "name": "PascalVOC",
    "n_gpu": 1,

    "arch": {
        "type": "ENet",
        "args": {
            "num_classes": 1
        }
    },
    "data_loader": {
        "type": "VOCDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0005,
            "weight_decay": 0.0002,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy_loss",
    "metrics": [
        "binary_iou"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 25,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 20,
        "verbosity": 1,
        
        "monitor": "min val_binary_iou",
        "early_stop": 50,

        "tensorboard": false
    }
}
